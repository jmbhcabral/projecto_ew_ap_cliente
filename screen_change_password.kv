
<ScreenChangePassword>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDLabel:
            text: "Mude a sua Password"
            size_hint_y: None
            height: self.texture_size[1]
            valign: "middle"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            font_size: dp(20)
            spacing: dp(20)
            padding: dp(20)
        MDTextField:
            id: password_label
            line_color_normal: self.error_color if self.error else (0.5, 0.5, 0.5, 1)
            line_color_focus: self.error_color if self.error else (0, 0, 0, 1)
            error_color: (1, 0, 0, 1)  # Vermelho
            size_hint_x: 0.8
            hint_text: "Password"
            helper_text_mode: "on_error"
            helper_text: "A password deve ter, pelo menos, 8 caracteres."
            password: True
            icon_left: "key-variant"
            font_size: dp(20)
            padding_y: dp(10)
            on_text: root.reset_field('password_label', 'Digite uma password.')
            pos_hint: {"center_x": .5, "center_y": .6}
        MDIconButton:
            id: toggle_icon
            icon: "eye-off"
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color     
            pos_hint:{"center_x": 0.875, "center_y": 0.6}
            on_release: root.toggle_password()
        MDTextField:
            id: password2_label
            line_color_normal: self.error_color if self.error else (0.5, 0.5, 0.5, 1)
            line_color_focus: self.error_color if self.error else (0, 0, 0, 1)
            error_color: (1, 0, 0, 1)  # Vermelho
            password: True
            icon_left: "key-variant"
            font_size: dp(20)
            padding_y: dp(10)
            size_hint_x: 0.8
            hint_text: "Confirmar password"
            helper_text_mode: "on_error"
            on_text: root.reset_field('password_label', 'Confirmar password.')
            pos_hint: {"center_x": .5, "center_y": .4}
        MDIconButton:
            id: toggle_icon2
            icon: "eye-off"
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color     
            pos_hint:{"center_x": 0.875, "center_y": 0.4}
            on_release: root.toggle_password_confirmation()
        
        MDRaisedButton:
            text: "Atualizar"
            size_hint_x: 0.8
            pos_hint:{"center_x": 0.5, "center_y": 0.2}
            on_release: root.update_password()
            
            