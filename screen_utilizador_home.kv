<UtilizadorHomeScreen>:
    MDScrollView:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            size_hint_y: None  # Isso é crucial
            height: self.minimum_height  # Isso define a altura para o conteúdo
            MDLabel:
                id: label_boas_vindas
                text: ''
                font_size: 24
                halign: "center"
                valign: "middle"
                size_hint_y: None
                height: self.texture_size[1]  # Altura baseada no tamanho do texto
                text_size: self.width - dp(32), None