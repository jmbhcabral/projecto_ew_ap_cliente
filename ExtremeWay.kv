#:import utils kivy.utils
#:set color1 "#DD7835"
#:set color2 "#D8D8D8"

MainWidget:

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<MainWidget>:
    recycleView: recycleView
    CoverImage:
        canvas.after:
            Color:
                rgba: 0, 0, 0, 0.6
            Rectangle:
                size: self.size
                pos: self.pos
        source: "images/menu_background.jpg"
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "images/logo_branco_2.png"
            allow_stretch: True
            size_hint: None, None
            size: dp(200), dp(110)
            pos_hint: {"center_x": .5}
        TitleLabel:
            text: "Nossos Hamburgueres"
        BoxLayout:
            padding: dp(20), dp(20)
            RecycleView:
                id: recycleView
                viewclass: 'ProdutoWidget'
                RecycleBoxLayout:
                    default_size: None, dp(120)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(16)

<TitleLabel@FitLabel>:
    font_size: dp(22)
    bold: True
    padding: dp(16), dp(3)
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            pos: self.pos
            size: self.size

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            # rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            pos: self.pos
            size: self.size


<ProdutoWidget>:
    BoxLayout:
        orientation: "horizontal"
        spacing: dp(10)
        Image:
            source: "images/sala_3.jpg"
            size_hint_x: None
            size_hint_y: 1
            width: dp(120)
            keep_ratio: True
            allow_stretch: False
                
        BoxLayout:
            size_hint_max_x: dp(300)
            size_hint_min_x: dp(150)
            orientation: "vertical"
            BoxLayout:
                spacing: dp(10)
                orientation: "horizontal"
                FitLabel:
                    font_size: dp(22)
                    bold: True
                    text: root.nome
                Badge:
                    text: "Vegetariano" if root.vegetariano else ""
            LeftAlignLabel:
                text: root.descricao_curta
                color: utils.get_color_from_hex(color2)

        FitLabel:
            color: utils.get_color_from_hex(color1)
            font_size: dp(20)
            text: str(root.preco_1)+"â‚¬"
            pos_hint: {"top": .9}
            
