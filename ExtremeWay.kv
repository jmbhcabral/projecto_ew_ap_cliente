MainWidget:

<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'ProdutoWidget'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: 10

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"

<ProdutoWidget>:
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Image:
                source: "images/sala_3.jpg"
                # size_hint_x: 0.2
                size: 200, 200
                allow_stretch: False
                
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                LeftAlignLabel:
                    text: root.nome

                    canvas.before:
                        Color:
                            rgb: 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                LeftAlignLabel:
                    text: str(root.vegetariano)
            LeftAlignLabel:
                text: root.ingredientes
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: str(root.preco)+"â‚¬"
